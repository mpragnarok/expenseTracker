<div class="card col-md-8 my-4 m-auto">
  <div class="card-header">
    <h3 class='card-title text-center'>Add a transaction</h3>
  </div>
  {{>messages}}
  <div class="card-body">
    <form action="/records" method="POST">
      <div class="form-inline">
        <div class="col-md-12 form-group row justify-content-center mb-3">
          <label for="name" class="col-sm-2 col-form-label">Name <span style="color:red"> *</label>
          <input type="text" class="form-control col-md-4" name="name" placeholder="Required" id="name" required
            value="{{name}}">
        </div>

        <div class="col-md-12 form-group row justify-content-center mb-3 dates">
          <label for="date" class="col-sm-2 col-form-label">Date <span style="color:red"> *</label>
          <input type="text" class="form-control col-md-4" id="date" name="date" id="date" required
            value="{{day}}-{{month}}-{{year}}">
        </div>

        <div class=" col-md-12 form-group row justify-content-center mb-3">
          <label for="subCategoryValue" class="col-sm-2 col-form-label">Category <span style="color:red">*</label>
          <select class="form-control col-md-4" name="subCategoryValue" required>
            <option value="" disabled selected>Select a category</option>
            <option value="{{subCategoryValue}}" hidden="hidden" selected="selected">
              {{subCategory}}
            </option>
            <option value="" disabled>&#128184; EXPENSE</option>
            <option value="expense/Home/home/0">Home</option>
            <option value="expense/Transportation/shuttle-van/1">Transportation</option>
            <option value="expense/Entertainment/grin-beam/2">Entertainment</option>
            <option value="expense/Food & Beverage/utensils/3">Food & Beverage</option>
            <option value="expense/Other/hand-holding-usd/4">Other</option>
            <option value="" disabled>&#128176; INCOME</option>
            <option value="income/Gifts/gift/5">Gifts</option>
            <option value="income/Salary/money-check-alt/6">Salary</option>
            <option value="income/Interest/coins/7">Interest</option>
            <option value="income/Selling/donate/8">Selling</option>
            <option value="income/Other/comment-dollar/9">Other</option>
          </select>
        </div>

        <div class="form-group col-md-12 row justify-content-center mb-4">
          <label for="amount" class="col-sm-2 col-form-label">Amount <span style="color:red"> *</label>
          <input type="text" class="form-control  col-md-4" id="amount" placeholder="$ " name="amount" required>
        </div>
      </div>
      <div class="form-group col-md-12 row justify-content-center mb-4">
        <label for="merchant" class="col-sm-2 col-form-label">Merchant</label>
        <input type="text" class="form-control  col-md-4" id="merchant" placeholder="Enter merchant " name="merchant">
      </div>
  </div>
  <div class="btn-group  col-md-12 row justify-content-center">
    <button type="submit" class="btn btn-outline-danger col-sm-3 mr-4">Submit</button>
    <a href="/" type="button" class="btn btn-outline-success col-sm-3">Cancel</a>
  </div>


  </form>
</div>

</div>